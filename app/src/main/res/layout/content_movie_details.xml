<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_xSmall"
    android:paddingEnd="@dimen/margin_xSmall"
    xmlns:tools="http://schemas.android.com/tools"
    android:nestedScrollingEnabled="true">
    <TextView
        android:id="@+id/movieTitleTv"
        android:text="Justice League Synder's Cut"
        android:layout_width="match_parent"
        android:textSize="18sp"

        android:padding="@dimen/margin_xSmall"
        android:textStyle="bold"
        android:textColor="@color/textColorBlack"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/directoryNameTv"
        android:text="Directed by :: Zack Snyder"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:layout_below="@id/movieTitleTv"

        android:paddingStart="@dimen/margin_xSmall"
        android:paddingEnd="@dimen/margin_xSmall"
        android:paddingTop="@dimen/margin_3xSmall"
        android:paddingBottom="@dimen/margin_3xSmall"

        android:textColor="@color/textColorBlack"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/plotTitleTv"
        android:text="@string/title_plot"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_below="@id/directoryNameTv"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingStart="@dimen/margin_xSmall"
        android:paddingEnd="@dimen/margin_xSmall"
        android:paddingTop="@dimen/margin_3xSmall"
        android:paddingBottom="@dimen/margin_3xSmall"
        android:textStyle="bold"
        android:textColor="@color/textColorBlack"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/descriptionTv"
        android:textIsSelectable="true"
        android:lineSpacingMultiplier="1.4"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_below="@id/plotTitleTv"
        android:text="@string/dummy_long_text"
        android:paddingStart="@dimen/margin_xSmall"
        android:paddingEnd="@dimen/margin_xSmall"
        android:paddingTop="@dimen/margin_3xSmall"
        android:paddingBottom="@dimen/margin_3xSmall"
        android:textColor="@color/textColorBlack"
        android:layout_height="wrap_content"/>

</RelativeLayout>